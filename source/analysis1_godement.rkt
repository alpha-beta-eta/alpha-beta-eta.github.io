(define ((associative-law op) x y z)
  (&= (op x (@ (op y z)))
      (op (@ (op x y)) z)))
(define ((commutative-law op) x y)
  (&= (op x y) (op y x)))
(define ((distributive-law-right * +) x y z)
  (&= (* x (@ (+ y z)))
